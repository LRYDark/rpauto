   /**
    * Display answer by type
    *
    * @param     $question
    * @param int $value
    */
   static function displayAnswer($question, $value = 0) {
      $questions_id = $question['id'];

      switch ($question['type']) {
         case PluginRpautoSurveyQuestion::YESNO :
            Dropdown::showYesNo("answer[$questions_id]", $value);
            break;

         case PluginRpautoSurveyQuestion::TEXTAREA :
            $value = Html::cleanPostForTextArea($value);
            $name = "answer[".$questions_id."]";
            echo Html::textarea([
                                   'name'    => $name,
                                   'value'    => $value,
                                   'cols'    => '60',
                                   'rows'    => '6',
                                   'display' => false,
                                ]);
            break;

         case PluginRpautoSurveyQuestion::NOTE :
            self::showStarAnswer($question, $value);
            break;

      }
   }

   /**
    * Star display
    *
    * @param     $question
    * @param int $value
    */
   static function showStarAnswer($question, $value = 0) {
      $questions_id = $question['id'];
      $number       = $question['number'];

      echo "<select id='rpauto_data_$questions_id' name='answer[$questions_id]'>";

      for ($i = 0; $i <= $number; $i++) {
         echo "<option value='$i' " . (($i == $value) ? 'selected' : '') . ">$i</option>";
      }
      echo "</select>";

      echo "<div id='stars_$questions_id'></div>";
      echo "<script type='text/javascript'>\n";
      echo "$(function() {";
      echo "$('#stars_$questions_id').rateit({value: " . $value . ",
                                   min : 0,
                                   max : $number,
                                   step: 1,
                                   backingfld: '#rpauto_data_$questions_id',
                                   ispreset: true,
                                   resetable: false});";
      echo "});</script>";
   }

   /**
    * Get answer by type
    *
    * @param     $question
    * @param int $value
    *
    * @return \clean|int|string
    */
   static function getAnswer($question, $value = 0) {

      switch ($question['type']) {
         case PluginRpautoSurveyQuestion::YESNO :
            return Dropdown::getYesNo($value);

         case PluginRpautoSurveyQuestion::TEXTAREA :
            return Html::cleanPostForTextArea($value);

         case PluginRpautoSurveyQuestion::NOTE :
            return $value;
      }
   }

   /**
    * Updates with answers
    *
    * @param \TicketRpauto $ticketRpauto
    */
   static function preUpdateRpauto(TicketRpauto $ticketRpauto) {

      $surveyanswer = new self();
      $dbu          = new DbUtils();
      if ($surveyanswer->getFromDBByCrit(["ticketrpautos_id" => $ticketRpauto->getField('id')])) {

         $input = ['id'     => $surveyanswer->getID(),
                   'answer' => addslashes($dbu->exportArrayToDB($ticketRpauto->input['answer']))];

         $surveyanswer->update($input);
      } else {
         $input = ['plugin_rpauto_surveys_id' => $ticketRpauto->input['plugin_rpauto_surveys_id'],
                   'ticketrpautos_id'         => $ticketRpauto->getField('id'),
                   'answer'                         => addslashes($dbu->exportArrayToDB($ticketRpauto->input['answer']))];

         $surveyanswer->add($input);
      }

   }


   /**
    * Displaying questions in GLPI's ticket rpauto
    *
    * @param $params
    *
    * @return bool
    */
   static function displayRpauto($params) {

      if (isset($params['item'])) {
         $item = $params['item'];
         if ($item->getType() == 'TicketRpauto') {

            self::showSurvey($item);
         }
      }
   }

   /**
    * Adding two tags to rpauto notifications
    *
    * @param \NotificationTarget $target
    */
   static function addNotificationDatas(NotificationTargetTicket $target) {

      $event = $target->raiseevent;
      if (isset($target->obj->fields['id'])) {
         $tickets_id  = $target->obj->fields['id'];
         $entities_id = $target->obj->fields['entities_id'];

         $ticket_rpauto = new TicketRpauto();
         if ($ticket_rpauto->getFromDBByRequest(['WHERE' =>
                                                          ["tickets_id" => $tickets_id]])) {

            $sanswer_obj = new self();
            if ($sanswer_obj->getFromDBByCrit(["ticketrpautos_id" => $ticket_rpauto->getField('id')])) {
               $dbu                           = new DbUtils();
               $sanswer_obj->fields['answer'] = $dbu->importArrayFromDB($sanswer_obj->fields['answer']);

               $plugin_rpauto_surveys_id = $sanswer_obj->getField('plugin_rpauto_surveys_id');
            } else {

               if (($survey = PluginRpautoSurvey::getObjectForEntity($entities_id)) !== false) {

                  $plugin_rpauto_surveys_id = $survey;
               }
            }

            if (isset($plugin_rpauto_surveys_id)) {
               $squestion_obj = new PluginRpautoSurveyQuestion;
               $questions     = $squestion_obj->find([PluginRpautoSurveyQuestion::$items_id => $plugin_rpauto_surveys_id]);

               switch ($event) {
                  case 'rpauto':
                     $data = '';
                     foreach ($questions as $question) {
                        $data .= $question['name'] . "\n\n";
                     }
                     $target->data['##rpauto.question##'] = $data;
                     break;

                  case 'replyrpauto':

                     $data = '';
                     foreach ($questions as $question) {

                        if (isset($sanswer_obj->fields['answer'][$question['id']])) {
                           $value = $sanswer_obj->fields['answer'][$question['id']];
                        } else {
                           if ($question['type'] == PluginRpautoSurveyQuestion::TEXTAREA) {
                              $value = '';
                           } else if ($question['type'] == PluginRpautoSurveyQuestion::NOTE) {
                              $value = $question['default_value'];
                           } else {
                              $value = 0;
                           }
                        }
                        $data .= $question['name'] . " : " . self::getAnswer($question, $value) . "\n\n";
                     }
                     $target->data['##rpauto.answer##'] = $data;

                     break;
               }
            }
         }
      }
   }
}
