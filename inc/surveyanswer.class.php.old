            $value = $sanswer_obj->fields['answer'][$question['id']];
         } else {
            if ($question['type'] == PluginRpautoSurveyQuestion::TEXTAREA) {
               $value = '';
            } else if ($question['type'] == PluginRpautoSurveyQuestion::NOTE) {
               $value = $question['default_value'];
